version: '3.3'
services:
  es01:
    image: docker.elastic.co/elasticsearch/elasticsearch:7.9.2
    container_name: es01
    restart: always
    environment:
      - node.name=es01
      - bootstrap.memory_lock=true
      - "ES_JAVA_OPTS=-Xms8g -Xmx8g"
      - path.repo=/snapshots
    ulimits:
      memlock:
        soft: -1
        hard: -1
    volumes:
      - esdata01:/usr/share/elasticsearch/data
      - esdata01:/snapshots
    ports:
      - 9200:9200
    networks:
      - esnet
    logging:
      driver: "json-file"
      options:
        max-size: "200k"
        max-file: "10"
  kibana:
    image: docker.elastic.co/kibana/kibana:7.9.2
    container_name: kibana
    restart: always
    depends_on:
      - es01
    environment:
      SERVER_NAME: kibana
      ELASTICSEARCH_HOSTS: http://es01:9200
    ports:
      - 5601:5601
    networks:
      - esnet
    logging:
      driver: "json-file"
      options:
        max-size: "200k"
        max-file: "10"
  logstash:
    image: docker.elastic.co/logstash/logstash:7.9.2
    container_name: logstash
    restart: always
    environment:
      - ELASTICSEARCH_HOST=es01
      - pipeline.batch.size=125
      - config.reload.automatic=true
      - queue.type=persisted
      - "LS_JAVA_OPTS:-Xmx4g-Xms4g"
    ports:
      - 5044:5044
      - 5045:5045
      - 6050:6050
    volumes:
      - ./logstash/pipelines.yml:/usr/share/logstash/config/pipelines.yml:ro
      - ./logstash/logstash_configs:/opt/logstash_configs:ro
      - ./logstash/translate:/opt/elastic_stack/logstash/translate:ro
      - ./logstash/rules:/etc/nsm/rules:ro
      - ./logstash/persistent_data:/usr/share/logstash/data
    networks:
      - esnet
    logging:
      driver: "json-file"
      options:
        max-size: "200k"
        max-file: "10"
volumes:
  esdata01:
    driver: local
networks:
  esnet:
    driver: bridge

